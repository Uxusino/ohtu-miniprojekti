[MASTER]

ignore=tests,story_tests,db_helper.py

[MESSAGE CONTROL]

disable=raw-checker-failed,
        bad-inline-option,
        locally-disabled,
        file-ignored,
        suppressed-message,
        useless-suppression,
        deprecated-pragma,
        use-symbolic-message-instead,
        missing-module-docstring,
        missing-function-docstring,
        missing-class-docstring,
        pointless-string-statement

[FORMAT]
indent-string='    '

[REFACTORING]

[DESIGN]
min-public-methods=1
